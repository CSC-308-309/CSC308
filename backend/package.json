{
  "name": "backend",
  "version": "1.0.0",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:up": "node db/run-all-schema.js up",
    "db:down": "node db/run-all-schema.js down",
